<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="RecommendItemCard">
        <!--所有的第三方属性, 或这 app: 开头的属性, 不要包含 app: 前缀-->
        <item name="layout_columnWeight">1</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!--首页推荐,列表条目 cradView样式-->
    <style name="Recommend_Item_Card">
        <!--app:layout_columnWeight="1"-->
        <!--app:cardUseCompatPadding="true"-->
        <!--app:cardCornerRadius="3dp"-->
        <!--app:cardElevation="2dp"-->
        <!--所有第三方属性,不需要包含App开头前缀-->
        <item name="layout_columnWeight">1</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>

    </style>

    <style name="RecommendItemBodyIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RecommendItemBodyTxt">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>

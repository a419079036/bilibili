<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_bangumi_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番剧推荐"
            />

        <TextView
            android:id="@+id/item_recommend_bangumi_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="更多"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <!--GridLayout可以设置列数, 直接在里面写控件-->
        <android.support.v7.widget.GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_bangumi_view_0"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_bangumi_body_icon_0"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_bangumi_body_title_0"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_status_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="第二话"/>

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_time_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="凌晨0:00"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_bangumi_view_1"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_bangumi_body_icon_1"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_bangumi_body_title_1"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_status_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="作者"/>

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_time_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="凌晨0:00"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_bangumi_view_2"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_bangumi_body_icon_2"
                        style="@style/RecommendItemBodyIcon"
                        />

                    <TextView
                        android:id="@+id/item_commend_bangumi_body_title_2"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_status_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="作者"/>

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_time_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="人数"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_bangumi_view_3"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_bangumi_body_icon_3"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_bangumi_body_title_3"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_status_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="作者"/>

                        <TextView
                            android:id="@+id/item_commend_bangumi_body_time_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="人数"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_commend_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="换一拨推荐"/>




</LinearLayout>